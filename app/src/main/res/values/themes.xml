<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IndoorNavigation" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/brand</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/brand</item>
        <item name="android:dividerHeight">6dp</item>
    </style>
    <style name="Theme.IndoorNavigation" parent="Base.Theme.IndoorNavigation" />
</resources>