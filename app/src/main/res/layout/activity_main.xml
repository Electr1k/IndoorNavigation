<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_main"
    tools:context=".MainActivity">


    <com.trifonov.indoor_navigation.mapView.CustomMap
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment
        android:id="@+id/nav_host_fragment_activity_bottom_navigation"
        class="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_navigation" />

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/routeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingVertical="7dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="7dp"
                    tools:ignore="Suspicious0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="37м"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/timeEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="20:25"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/pathTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="end"
                            android:text="1мин"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="30"
                        app:trackCornerRadius="50dp"
                        app:trackThickness="7dp"
                        app:indicatorColor="@color/green"
                        app:trackColor="#D6D9DE"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/close_path"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/close_icon"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="16dp">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                app:menu="@menu/bottom_menu"
                style="@style/Widget.Design.BottomNavigationView"
                app:itemPaddingTop="0dp"
                app:itemPaddingBottom="0dp"
                app:itemIconSize="32dp"
                app:itemIconTint="@color/nav_item_color"
                app:itemActiveIndicatorStyle="@null"
                app:labelVisibilityMode="unlabeled"
                android:scrollIndicators="left"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>