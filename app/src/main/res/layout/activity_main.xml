<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_main"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/viewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED">

        <ovh.plrapps.mapview.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btn_zoomIn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|center"
            android:layout_marginBottom="35dp"
            android:background="@drawable/plus"/>

        <ImageButton
            android:id="@+id/btn_zoomOut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="right|center"
            android:background="@drawable/minus"/>

        <ImageButton
            android:id="@+id/btn_position"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/mest"/>

        <NumberPicker
            android:id="@+id/picker"
            android:layout_width="50dp"
            android:layout_height="160dp"
            android:layout_gravity="center|left"
            android:layout_margin="14dp"
            android:background="@drawable/level_border"
            android:descendantFocusability="blocksDescendants"
            android:theme="@style/AppTheme.Picker" />

    </FrameLayout>
    <fragment
        android:id="@+id/nav_host_fragment_activity_bottom_navigation"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/cardNav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_menu"
            style="@style/Widget.Design.BottomNavigationView"
            app:itemPaddingTop="0dp"
            app:itemPaddingBottom="0dp"
            app:itemIconSize="32dp"
            app:itemIconTint="@color/nav_item_color"
            app:itemActiveIndicatorStyle="@null"
            app:labelVisibilityMode="unlabeled"
            android:scrollIndicators="left"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>