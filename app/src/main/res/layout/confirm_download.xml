<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirm_view">
    <TextView
        android:id="@+id/confirmText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Карта локации 'НАЗВАНИЕ ЛОКАЦИИ' не установлена на Ваше устройство, выполнить её загрузку?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="3sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/positiveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        android:backgroundTint="@color/button_ripple_color"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="16dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmText"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/negativeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no"
        android:textSize="18sp"
        android:minWidth="0dp"
        android:textColor="@color/dark_blue"
        android:backgroundTint="@color/button_ripple_color"
        android:layout_marginEnd="5dp"
        android:paddingHorizontal="16dp"
        android:minHeight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmText"
        app:layout_constraintEnd_toStartOf="@id/positiveBtn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>